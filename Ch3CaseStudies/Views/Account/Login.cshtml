@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h2 class="mb-0"><i class="fas fa-sign-in-alt me-2"></i>Welcome Back</h2>
                    <p class="mb-0 mt-2">Sign in to your SportsPro account</p>
                </div>
                <div class="card-body p-5">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <form method="post" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                        <div class="mb-4">
                            <label asp-for="Username" class="form-label">
                                <i class="fas fa-user me-2"></i>Username
                            </label>
                            <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter your username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock me-2"></i>Password
                            </label>
                            <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <div class="form-check">
                                <input type="checkbox" asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                                <label class="form-check-label" for="rememberMe">
                                    Remember me
                                </label>
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Sign In
                            </button>
                        </div>
                        
                        <div class="text-center">
                            <a asp-action="Index" asp-controller="Home" class="text-muted">
                                <i class="fas fa-arrow-left me-1"></i>Back to Home
                            </a>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light text-center py-3">
                    <p class="mb-0">
                        Don't have an account? 
                        <a asp-action="Register" class="text-primary fw-bold">
                            <i class="fas fa-user-plus me-1"></i>Register as a new user
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>