@{
    Layout = "_Layout";
    ViewData["title"] = "About Page";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="fade-in">About SportsPro</h1>
                <p class="lead fade-in">Your trusted partner in sports management technology</p>
            </div>
            <div class="col-lg-4 text-center">
                <i class="fas fa-info-circle" style="font-size: 8rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</div>

<!-- About Content -->
<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">Our Mission</h2>
                    <p class="lead text-center text-muted mb-5">
                        SportsPro Technical Support constantly strives to provide the highest level of technical support 
                        for all products in the SportsPro Family.
                    </p>
                    
                    <div class="row g-4 mt-4">
                        <div class="col-md-6">
                            <div class="text-center">
                                <i class="fas fa-award text-primary mb-3" style="font-size: 3rem;"></i>
                                <h4>Excellence</h4>
                                <p class="text-muted">We maintain the highest standards in everything we do.</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-center">
                                <i class="fas fa-handshake text-primary mb-3" style="font-size: 3rem;"></i>
                                <h4>Partnership</h4>
                                <p class="text-muted">We work closely with our clients to achieve their goals.</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-center">
                                <i class="fas fa-lightbulb text-primary mb-3" style="font-size: 3rem;"></i>
                                <h4>Innovation</h4>
                                <p class="text-muted">We continuously improve our solutions and services.</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="text-center">
                                <i class="fas fa-heart text-primary mb-3" style="font-size: 3rem;"></i>
                                <h4>Passion</h4>
                                <p class="text-muted">We're passionate about sports and technology.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>