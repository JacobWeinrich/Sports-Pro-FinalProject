@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> signInManager

@{
    string c = ViewContext.RouteData.Values["Controller"].ToString() ?? "";
    string a = ViewContext.RouteData.Values["Action"].ToString() ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <title>@ViewBag.title - SportsPro</title>
</head>
<body>

    <!-- School Project Disclaimer Banner -->
    <div class="alert alert-warning alert-dismissible fade show mb-0 text-center" role="alert">
        <i class="fas fa-graduation-cap me-2"></i>
        <strong>School Project Demo:</strong> This is a demonstration website for educational purposes only. Not a real business application.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-gradient">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold d-flex align-items-center" asp-controller="Home" asp-action="Index" asp-area="">
                <i class="fas fa-dumbbell me-2"></i>SportsPro
            </a>
            <div class="navbar-text text-warning fw-bold me-3">
                <i class="fas fa-graduation-cap me-1"></i>School Project Demo
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
     
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(c == "Home" && a == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index" asp-area="">
                            <i class="fas fa-home me-1"></i>Home
                        </a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(c == "Product" ? "active" : "")" asp-controller="Product" asp-action="List" asp-area="">
                                <i class="fas fa-box me-1"></i>Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(c == "Technician" ? "active" : "")" asp-controller="Technician" asp-action="List" asp-area="">
                                <i class="fas fa-user-cog me-1"></i>Technicians
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(c == "Customer" ? "active" : "")" asp-controller="Customer" asp-action="List" asp-area="">
                                <i class="fas fa-users me-1"></i>Customers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(c == "Incident" ? "active" : "")" asp-controller="Incident" asp-action="List" asp-area="">
                                <i class="fas fa-exclamation-triangle me-1"></i>Incidents
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(c == "Registration" ? "active" : "")" asp-controller="Registration" asp-action="Index" asp-area="">
                                <i class="fas fa-clipboard-list me-1"></i>Registrations
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(c == "User" ? "active" : "")" asp-controller="User" asp-action="List" asp-area="Admin">
                                <i class="fas fa-user-shield me-1"></i>User Management
                            </a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav me-0">
                    @if (signInManager.IsSignedIn(User))
                    {
                        <li class="nav-item @(c == "Account" & a == "Logout" ? "active" : "")">
                            <form asp-action="Logout" asp-controller="Account" method="post" asp-area="">
                                <input type="submit" value="Log Out" class="btn btn-outline-light" />
                                <span class="text-light">@User.Identity.Name</span>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item @(c == "Account" & a == "Login" ? "active" : "")">
                            <a class="btn btn-outline-light" asp-controller="Account" asp-action="Login" asp-area="">Login</a>
                        </li>
                        <li class="nav-item @(c == "Account" & a == "Register" ? "active" : "")">
                            <a class="nav-link " asp-controller="Account" asp-action="Register" asp-area="">Register</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link @(c == "Home" && a == "About" ? "active" : "")" asp-controller="Home" asp-action="About" asp-area="">About</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="flex-grow-1">
        <div class="container-fluid py-4">
            @RenderBody()
        </div>
    </main>
    
    <footer class="bg-light border-top mt-5">
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-md-4">
                    <p class="mb-0 text-muted">&copy; @DateTime.Now.Year - SportsPro Technical Support</p>
                </div>
                <div class="col-md-4 text-center">
                    <p class="mb-0 text-muted">Providing excellence in sports management software</p>
                </div>
                <div class="col-md-4 text-end">
                    <p class="mb-0 text-muted">
                        Made by <a href="https://JakeWeinrich.com" target="_blank" class="text-decoration-none">Jacob Weinrich</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
