@model List<Product>
@{
    Layout = "_Layout";
    ViewData["title"] = "Products Page";
}

@{
    if (ViewData["ProductTempMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle me-2"></i>@ViewData["ProductTempMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1"><i class="fas fa-box me-2"></i>Product Manager</h2>
                    <p class="text-muted mb-0">Manage your product catalog</p>
                </div>
                <a asp-controller="Product" asp-action="Add" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Add Product
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 8%;">
                                <i class="fas fa-hashtag me-1"></i>ID
                            </th>
                            <th style="width: 15%;">
                                <i class="fas fa-barcode me-1"></i>Code
                            </th>
                            <th style="width: 25%;">
                                <i class="fas fa-tag me-1"></i>Name
                            </th>
                            <th class="text-end" style="width: 15%;">
                                <i class="fas fa-dollar-sign me-1"></i>Price
                            </th>
                            <th class="text-center" style="width: 15%;">
                                <i class="fas fa-calendar me-1"></i>Release Date
                            </th>
                            <th class="text-center" style="width: 22%;">
                                <i class="fas fa-cogs me-1"></i>Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td class="text-center fw-bold text-primary">@product.ProductId</td>
                                <td>
                                    <span class="badge bg-light text-dark border">@product.ProductCode</span>
                                </td>
                                <td class="fw-medium">@product.Name</td>
                                <td class="text-end fw-bold text-success">@((product.Price ?? 0).ToString("C"))</td>
                                <td class="text-center text-muted">@product.ReleaseDate.ToShortDateString()</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" asp-route-slug="@product.Slug" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-edit me-1"></i>Edit
                                        </a>
                                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId" asp-route-slug="@product.Slug" 
                                           class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open text-muted" style="font-size: 4rem;"></i>
            <h4 class="text-muted mt-3">No Products Found</h4>
            <p class="text-muted">Get started by adding your first product.</p>
            <a asp-controller="Product" asp-action="Add" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add Your First Product
            </a>
        </div>
    }
</div>